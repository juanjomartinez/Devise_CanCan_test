= form_for(@producto, :html => { :multipart => 'true' }) do |f|
	- if @producto.errors.any?
		%div#error_explanation
			%h2= pluralize(@producto.errors.count, "error")+"prohibited this producto from being saved:"

			%ul
				- @producto.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :nombre
		%br
		= f.text_field :nombre

	.field
		= f.label :descripcion
		%br
		= f.text_area :descripcion

	.field
		= f.label :family
		%br
		= f.check_box :family

	.field
		= f.label :wellness
		%br
		= f.check_box :wellness

	.field
		= f.label :water
		%br
		= f.check_box :water

	.field
		= f.label :volcanic
		%br
		= f.check_box :volcanic

	.field
		= f.label :imagen
		%br
		= f.file_field :imagen

	.field
		= f.label :activo
		%br
		= f.check_box :activo

	.actions
		= f.submit
